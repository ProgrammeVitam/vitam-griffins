<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!-- <id>GRIFFINS</id> -->
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- Add "external" rpm -->
        <fileSet>
            <directory>../rpm/target</directory>
            <outputDirectory>rpm/</outputDirectory>
            <includes>
                <include>**/*.rpm</include>
            </includes>
        </fileSet>
        <!-- Add "external" deb -->
        <fileSet>
            <directory>../deb/target</directory>
            <outputDirectory>deb/</outputDirectory>
            <includes>
                <include>**/*.deb</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- Add java-based vitam-product rpm -->
        <dependencySet>
            <outputDirectory>/rpm/</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>*:*:rpm</include>
            </includes>
        </dependencySet>
        <!-- Add java-based vitam-product deb -->
        <dependencySet>
            <outputDirectory>/deb/</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>*:*:deb</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
