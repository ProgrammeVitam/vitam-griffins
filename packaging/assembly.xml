<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!-- <id>unsigned</id> -->
    <id>general</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- Add source code -->
        <fileSet>
            <directory>../</directory>
            <outputDirectory>sources/</outputDirectory>
            <excludes>
                <exclude>**/*.rpm</exclude>
                <exclude>**/*.deb</exclude>
                <exclude>**/cookbook</exclude>
            </excludes>
        </fileSet>
        <!-- add doc -->
        <fileSet>
            <directory>../cookbook</directory>
            <outputDirectory>testing/</outputDirectory>
        </fileSet>
        <!-- Add "external" rpm -->
        <fileSet>
            <directory>../rpm/target</directory>
            <outputDirectory>rpm/</outputDirectory>
            <includes>
                <include>**/*.rpm</include>
                <include>**/repodata/*.*</include>
            </includes>
        </fileSet>
        <!-- Add "external" deb -->
        <fileSet>
            <directory>../deb/target</directory>
            <outputDirectory>deb/</outputDirectory>
            <includes>
                <include>**/*.deb</include>
                 <include>**/Packages.gz</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <!-- Add java-based vitam-product rpm -->
        <dependencySet>
            <outputDirectory>/rpm/</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>*:*:rpm</include>
            </includes>
        </dependencySet>
        <!-- Add java-based vitam-product deb -->
        <dependencySet>
            <outputDirectory>/deb/</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>*:*:deb</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
