<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <!-- <id>GRIFFINS</id> -->
    <id>rpm-signed</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- add public key -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>RPM-GPG-KEY-vitam</include>
            </includes>
        </fileSet>
        <!-- add doc -->
        <fileSet>
            <directory>../cookbook</directory>
            <outputDirectory>testing/</outputDirectory>
        </fileSet>
        <!-- Add "signed" rpm -->
        <fileSet>
            <directory>rpm_signed/</directory>
            <outputDirectory>rpm_signed/</outputDirectory>
            <includes>
                <include>**/*.rpm</include>
                <include>**/repodata/*.*</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/rpm_signed</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>*:*:rpm</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
